{
  "name": "awesomity-backend-challenge",
  "version": "1.0.0",
  "description": "Create a To-Do API. The To-Do API should Create, Update, Read and Delete operations on a todo item.",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --timeout 20000 ./src/tests/**.test.js --require @babel/register --exit",
    "start": "babel-node ./src",
    "dev": "SET DEBUG=app:* && nodemon --exec babel-node ./src/index",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "sequelize": "node_modules/.bin/sequelize",
    "migrate": "npm run sequelize db:migrate",
    "migrate-undo": "npm run sequelize db:migrate:undo",
    "migrate-undo-all": "npm run sequelize db:migrate:undo:all",
    "db-drop": "npm run sequelize db:drop nomad",
    "db-create": "npm run sequelize db:create nomad",
    "seed": "npm run sequelize db:seed:all",
    "undo-migrate-seed": "npm run sequelize db:migrate:undo:all && npm run sequelize db:migrate && npm run sequelize db:seed:all",
    "seed-undo": "npm run sequelize db:seed:undo",
    "seed-undo-all": "npm run sequelize db:seed:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/James-nyagatare/Awesomity-backend-challenge.git"
  },
  "keywords": [
    "todo",
    "Awesomity",
    "Challenge"
  ],
  "author": "James Nyagatare",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/James-nyagatare/Awesomity-backend-challenge/issues"
  },
  "homepage": "https://github.com/James-nyagatare/Awesomity-backend-challenge#readme",
  "dependencies": {
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.17",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "morgan": "^1.10.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "nyc": "^15.1.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.0",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^6.0.0-rc.5",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.7"
  }
}
